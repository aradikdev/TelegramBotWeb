@model List<Message>

<div class="row">
    @foreach (Message message in Model)
    {
        if (message.IsOur)
        {
            <div class="col-12">
                <div class="border border-primary rounded p-2 text-end float-end" style="padding-left: 100px;">
                    <span class="text-muted" style="font-size:10px;">@message.MessageDate</span>
                    <br>
                    @message.MessageText
                </div>
            </div>
        }
        else
        {
            <div class="col-12">
                <div class="border border-success rounded p-2 float-start" style="padding-right: 100px;">
                    <span class="text-muted" style="font-size:10px;">@message.MessageDate</span>
                    <br>
                    @message.MessageText
                </div>
            </div>
        }
    }
</div>